<h1>Homes#login</h1>
<p>Find me in app/views/homes/login.html.erb</p>

<div class='container'>
  <div class='row'>
    <div class='col-2 hidari'>
      <div class = 'genre_search'>
        <div class = 'genre_search_title'>ジャンル検索</div>
        <% @genres.each do |genre| %>
          <div class = 'genre_search_record'><%= genre.name %></div>
        <% end %>
      </div>
    </div>
    <div class='col-10 migi'>
      <div class = 'item-container'>
        <% @items.each do |item| %>
          <%= link_to(about_path, class: 'item-box') do %>
            <%= image_tag(item.image_id, class: "item-img") %>
            <p class = 'item-text'><%= item.name %></br>¥<%= item.total_payment.to_s(:delimited) %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>