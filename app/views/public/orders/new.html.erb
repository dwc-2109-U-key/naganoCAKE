<h1>Public::Orders#new</h1>
<p>Find me in app/views/public/orders/new.html.erb</p>

<%= form_with model: @order, url: confirm_orders_path, class: "m-5", local: true do |o| %>
  <%= o.label :payment_method, "支払い方法" %>
  </br>
  <%= o.radio_button :payment_method, 1 %>クレジットカード
  </br>
  <%= o.radio_button :payment_method, 2 %>銀行振り込み
  </br>
  </br>
  </br>
  <%= o.label :status, "お届け先" %>
  </br>
  <%= o.radio_button :status, 1 %>"ご自身の住所"
  </br>
  〒<%= Customer.find(1).postal_code %> <%=Customer.find(1).address %> <%= Customer.find(1).family_name %><%= Customer.find(1).first_name %>
  </br>
  <%= o.radio_button :status, 2 %>"登録済み住所から選択"
  </br>
  <%= o.radio_button :status, 3 %>"新しいお届け先"
  </br>
<% end %>
